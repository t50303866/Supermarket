<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_goods_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/tv_goods_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_goods_name"
        android:text="商品介绍阿卡迪夫国家老卡机更换零件阿凡客攻击路口附近干活减"
        android:textSize="15sp"
        android:lines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@+id/iv_goods"
        android:text="商品名" 
        android:textColor="#000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="商家名" 
        android:textSize="23sp"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tv_goods_name"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods"
        android:layout_alignLeft="@+id/tv_goods_content"
        android:text="￥32.5" 
        android:textColor="#0000ff"
        />

    <TextView
        android:id="@+id/tv_playment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_goods_price"
        android:layout_alignBottom="@+id/tv_goods_price"
        android:layout_alignParentRight="true"
        android:text="已经售出5320000件"
        android:textColor="#f00" 
        android:paddingRight="10dp"/>

</RelativeLayout>
