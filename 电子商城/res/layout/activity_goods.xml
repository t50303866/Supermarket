<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GoodsActivity" >

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="店名" />

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_shop_name"
        android:src="@drawable/bg"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_alignTop="@+id/iv_goods"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/iv_goods"
        android:text="商品名" />

    <Button
        android:id="@+id/bt_buy"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_add_shop_vehicle"
        android:layout_alignBottom="@+id/bt_add_shop_vehicle"
        android:layout_alignRight="@+id/tv_shop_name"
        android:text="购买" />

    <Button
        android:id="@+id/bt_add_shop_vehicle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods"
        android:layout_alignLeft="@+id/tv_goods_name"
        android:text="加入购物车" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:text="样式选择" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="40dp"
        android:text="评论列表" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_goods"
        android:layout_below="@+id/tv_goods_name"
        android:background="#8000"
        android:gravity="center_horizontal"
        android:text="评论"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_goods_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goods_name"
        android:layout_alignTop="@+id/tv_goods_name"
        android:layout_marginTop="27dp"
        android:text="商品详情"
        android:textColor="#a000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_add_shop_vehicle"
        android:layout_alignLeft="@+id/tv_goods_name"
        android:text="购买数量" />

</RelativeLayout>
